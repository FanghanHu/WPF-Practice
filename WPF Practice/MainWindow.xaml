<Window x:Class="WPF_Practice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Practice"
        mc:Ignorable="d"
        Title="MainWindow" Height="190" Width="250">
    <Window.Resources>
        <local:YesNoBooleanConverter x:Key="YesNoBooleanConverter"/>
    </Window.Resources>
    <StackPanel Margin="10">
        <TextBox Name="txtValue"/>
        <WrapPanel >
            <TextBlock Text="The Current Value is: "></TextBlock>
            <TextBlock Text="{Binding ElementName=txtValue, Path=Text, Converter={StaticResource YesNoBooleanConverter}}"/>
        </WrapPanel>
        <CheckBox IsChecked="{Binding ElementName=txtValue, Path=Text, Converter={StaticResource YesNoBooleanConverter}}">Yes</CheckBox>
    </StackPanel>
</Window>
