<Window x:Class="WPF_Practice.NameInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Practice"
        mc:Ignorable="d"
        Title="Input" Height="140" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Please Enter your name:"/>
        <TextBox Name="txtName" Margin="0,10,0,10"/>
        <WrapPanel HorizontalAlignment="Right">
            <Button IsDefault="True" MinWidth="60" Click="Button_Click" Margin="0,0,10,0">Ok</Button>
            <Button IsCancel="True" MinWidth="60">Cancel</Button>
        </WrapPanel>
    </StackPanel>
</Window>
